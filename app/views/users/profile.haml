:css
  body {
  padding: 0%;

  }
  .span12.text-center{
  margin: 0;
  fieldset.btn{
  width: 100%;

  }
  }





.span12.text-center
  %fieldset.btn.profile{:style => "padding: 2% 0% 5% 0%; width: 100%"}
    %h1.text-center
      = @user.first_name
    %br
    %br
    .row-fluid
      .span6
        .row-fluid.span12
          .span6.text-center
            %strong
              First name:
          .span6.text-center
            = @user.first_name
        .row-fluid.span12
          .span6.text-center
            %strong
              Last name:
          .span6.text-center
            = @user.last_name
        .row-fluid.span12
          .span6.text-center
            %strong
              User name:
          .span6.text-center
            = @user.user_name
        .row-fluid.span12.email
          .span6.text-center
            %strong
              Email:
          .span6.text-center
            = @user.email
        .row-fluid.span12
          .span6.text-center
            %strong
              Zip:
          .span6.text-center
            = @user.zip
        .row-fluid.span12
          .span6.text-center
            %strong
              Contact:
          .span6.text-center
            = @user.contact
        .row-fluid.span12
          .span6.text-center
            %strong
              Phone:
          .span6.text-center
            = @user.phone
        .row-fluid.span12.email
          .span6.text-center
            %strong
              Bio:
          .span6.text-center
            = text_area_tag :text,   @user.bio, :width => '100%'
        .row-fluid.span12
          .span6.text-center
            %strong
              Twitter:
          .span6.text-center
            = link_to @user.twitter, @user.twitter if @user.twitter
        .row-fluid.span12
          .span6.text-center
            %strong
              Facebook:
          .span6.text-center
            = link_to @user.facebook, @user.facebook if @user.facebook
        .row-fluid.span12
          .span6.text-center
            %strong
              Google +:
          .span6.text-center
            = link_to @user.google, @user.google if @user.google


      .span6.text-center
        = image_tag @user.avatar.url, :style => 'max-height: 350px; max-width: 100%;'

    = button_to 'Update information', edit_user_registration_path, :method => 'get', :class=>'btn btn-info'
    %br
    .row-fluid
      .span12
        %h4.text-center
          My hops:
        %table.table.table-condensed
          %tr
            %th
              Name:
            %th
              Producer:
            %th
              Type
            %th
              Hop photos:
            %th
          - @hops.each do |hop|
            %tr
              %td
                = link_to hop.name, admin_hop_path(hop)
              %td
                = link_to(hop.producer.user_name, user_path(hop.producer)) if  hop.producer
              %td
                =  hop.daily ? 'Daily': 'Regular'
              %td
                =  link_to 'Hop photos',admin_hop_photos_path({:hop_id =>hop.id })



