- if @prize.errors.any?
  - @prize.errors.full_messages.each do |msg|
    .alert.alert-error
      %button.close{type: :button, 'data-dismiss' => 'alert'}
      = msg
= form_for([:admin, @prize]) do |f|
  = f.hidden_field :hop_id
  %table.hops-form
    %tr
      %td
        %b
          Hop:
      %td
        = @prize.hop.name
    %tr
      %td
        %b
          Cost:
      %td
        = f.text_field :cost, class: 'span12'
    %tr
      %td
        %b
          Special place:
      %td
        Place
        =radio_button(:prize, :prize_type, "", :checked => true,:onclick => 'place_non_hide();')
        Special prize
        =  radio_button(:prize, :prize_type, "special", :onclick => 'place_non_hide();')
        Random prize
        =  radio_button(:prize, :prize_type, "random", :onclick => 'place_hide();')

    %tr
      %td
        %b
          Place â„– /title :
      %td
        = f.text_field :place, class: 'span12 place-field'
    %tr
      %td{colspan: 2}
        = link_to 'Submit', '#', class: 'btn btn-info create-prize', onclick: 'prizes_modal.submitForm({hop_id: ' + @prize.hop.id.to_s + '}); return false;'