<%= form_for(@admin_application , :controller=>"admin/aplications") do |f| %>
  <% if @admin_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_application.errors.count, "error") %> prohibited this admin_application from being saved:</h2>

      <ul>
      <% @admin_application.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :api_key %><br />
    <%= f.text_field :api_key %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
