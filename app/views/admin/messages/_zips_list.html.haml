#zips_list
  .row-fluid
    .span7
      = will_paginate @zips, renderer: BootstrapPagination::Rails, inner_window: 0, outer_window: 0
    .span5.text-right.row
      = text_field_tag :input, params[:query], class: 'span7', id: 'search_field'
      = link_to 'Search',  admin_messages_find_zip_path, class: 'btn span4', id: 'search_button'
  %table.table.table-condensed
    %tr
      %th
        Zip
      %th
    - @zips.each do |zip|
      %tr
        %td
          = zip.zip

        %td{style: 'text-align: right'}
          = link_to 'Search',  admin_messages_find_zip_path(:zip =>zip.zip), id: 'select_id'
  -if flash[:id]
    = text_field_tag :input, flash[:id]
  = will_paginate @zips, renderer: BootstrapPagination::Rails