<%= render :partial => "admin_messages_tool.html.haml"%>
<h1>Send message</h1>
<br />

<% if flash[:success] %>
    <%= flash[:success] %>
<% end %>

<%= form_for @message, url: admin_messages_create_message_path do |f| %>

    <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this hop_task from being saved:</h2>

          <ul>
            <% @message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table>
      <tr>
        <td class ="span4">Filters</td>
        <td class ="span4">Hop</td>
        <td class ="span4">Zip code</td>
        <td class ="span4">User id</td>
      </tr>
      <tr>
        <td><%= %></td>
        <td><%= f.text_field :receiver_id, :class=>"input-mini" %></td>
        <td><%= f.text_field :receiver_id, :class=>"input-mini" %></td>
        <td><%= f.text_field :receiver_id, :class=>"input-mini" %></td>
      </tr>
    </table>

    <table>
      <tr>
        <td id="top"><%= f.select :email_author, ['HOPMASTER@CashHoppers.com',current_user.email],:class=>"input-medium"%></td>
        <td><%= f.text_area :text, :class=>"input-xlarge",  :placeholder=>"CONTENT", :rows=>"10" %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= f.submit "SEND", :class=>"span10 btn btn-success",  %></td>
        <td></td>
      </tr>

    </table>
<% end %>

<%= form_tag() do %>
    <table>
      <tr>
        <td class="span3"><%= submit_tag("SCHEDULE SEND", :class=>" btn btn-success" ) %></td>
        <td class="span3"><%= text_field_tag(:hop, nil, :class=>"input-small", :placeholder=>"DATE" ) %></td>
        <td class="span3"><%= text_field_tag(:hop, nil, :class=>"input-small", placeholder: "Time" ) %></td>
      </tr>
    </table>
<% end %>

<div class="pull-right"><%= link_to "Message history", admin_messages_message_history_path %></div>
