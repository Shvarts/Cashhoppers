#names_list
  .row-fluid
    .span7
      = will_paginate @users, renderer: BootstrapPagination::Rails, inner_window: 0, outer_window: 0
    .span5.text-right.row
      = text_field_tag :input, params[:query], class: 'span7', id: 'search_field'
      = link_to 'Search',  admin_hoppers_search_by_name_path, class: 'btn span4', id: 'search_button'
  %table.table.table-condensed
    %tr
      %th
        Id
      %th
        user Name
      %th
        first_name
      %th
    - @users.each do |user|
      %tr
        %td
          = user.id
        %td
          = user.user_name
        %td
          = user.first_name

        %td{style: 'text-align: right'}
          = link_to 'Search',   admin_hoppers_search_by_name_path(:name =>user.id), id: 'select_id'
  -if flash[:id]
    = text_field_tag :input, flash[:id]
  = will_paginate @users, renderer: BootstrapPagination::Rails