= will_paginate @asks, renderer: BootstrapPagination::Rails
- if @asks.blank?
  List has no rows
-else
  %table.table.table-condensed
    %tr
      %th
        Question
      %th
        Answer
      - @asks.each do |ask|
        %tr
          %td
            %div{stule: 'max-width: 100%; word-wrap: break-word;'}
              =ask.ask

          %td{stule: 'width: 50px'}
            %div{stule: 'width: 50px; word-wrap: break-word;'}
              =ask.answer
          %td
          %td{style: 'text-align: right'}
            %button.btn.btn-info.btn-mini{onclick: 'asks_modal.editRecord({}, "Edit ask", "' + edit_admin_ask_path(ask) + '")'}
              Edit
            %button.btn.btn-danger.btn-mini{onclick: 'asks_modal.removeRecord("' + admin_ask_path(ask) + '", {})'}
              Delete
= will_paginate @asks, renderer: BootstrapPagination::Rails
