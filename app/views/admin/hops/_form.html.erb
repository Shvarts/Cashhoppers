<%= form_for([:admin, @hop ]) do |f| %>
  <% if @hop.errors.any? %>
    <div id="error_explanation">
      <h2><= pluralize(@admin.hops.errors.count, "error") %> prohibited this hop from being saved:</h2>

      <ul>
      < @hop.errors.full_messages.each do |msg| %>
        <li><= msg %></li>
      < end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <b>Hop name</b>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <b>Dates/times of hop</b>

    <%= f.datetime_select :time_start, discard_year: true , prompt: {day: 'day',
                                                                     minute: 'minute' ,month: ' month', hour: 'hour'}%>
    <b> to </b>

    <%= f.datetime_select :time_end, discard_year: true , prompt: {day: 'day',
                                                                   minute: 'minute' ,month: ' month', hour: 'hour'}%>

  </div>

    <div class="field">
      <b>Showprod id </b>
      <%= f.text_field :producer_id %>
    </div>

  <div class="field">
    <b> Showprod contact </b>
    <%= f.text_field :producer_contact %>
  </div>

  <div class="field">
    <b>Contact phone </b>
    <%= f.text_field :contact_phone %>
  </div>
  <div class="field">
    <b>Contact email </b>
    <%= f.email_field :contact_email %>
  </div>
  <div class="field">
    <b> Hop code </b>
    <%= f.text_field :hop_code %>
  </div>
  <div class="field">
    <b>  Hop price </b>
    <%= f.text_field :hop_price %>
  </div>

  <div class="field">
    <b> Special event  </b>
    <%= f.text_field :event %>
  </div>
  <div class="field">
    <b>  Jackpot </b>
    <%= f.text_field :jackpot %>
  </div>
  <div class="field">
    <b>  Hop items </b>
    <%= f.text_field :hop_items %>
    <%= f.hidden_field :daily_hop%>
  </div>
    <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
