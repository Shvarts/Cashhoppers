!!!
%html
  %head
    %title
      CashHoppers
    = stylesheet_link_tag 'application', controller_path, media: :all
    = javascript_include_tag 'application', controller_path
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    = csrf_meta_tags
  %body
    .row-fluid
      .span8.offset2
        .page-header
          .row-fluid
            .span3
              %h1
                CashHoppers
            .span9.text-right
              = render partial: 'layouts/authentication'
        .row-fluid
          - if flash[:error]
            .alert.alert-error
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:error]
          - elsif flash[:success]
            .alert.alert-success
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:success]
          - elsif flash[:notice]
            .alert.alert-notice
              %button.close{type: :button, 'data-dismiss' => 'alert'}
                &times;
              = flash[:notice]
        .row-fluid
          .span3
            = render partial: 'layouts/sidebar'
            = yield :sidebar
            = controller.sidebar ? (render :partial => "#{controller.sidebar}") : ''
          .span9
            .well
              = controller.sub_layout ? (render :partial => "#{controller.sub_layout}") : yield
