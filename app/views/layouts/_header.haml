.header
  .row-fluid
    .header-content
      .span12.controls-row
        .header-left.span6
          .menu-full-screen
            %ul
              %li
                -#= link_to 'HOME', root_path, :class => 'navigation'
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#first-page": root_path}"} HOME

              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#gray-page": root_path + "#about"}"} ABOUT
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#yellow-page": root_path + "#how_to_play"}"} HOW TO PLAY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#what-page": root_path + "#gallery"}"}  PHOTO GALLERY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#business-page": root_path + '#business'}"} BUSINESSES
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#events-page": root_path + '#trade_event'}"} SHOWS & EVENTS
              %li.last
                %a.navigation{:href=> pages_faq_path } FAQ


          .btn-group.link
            -#button.btn.btn-navbar#my-btn{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %button.btn.dropdown-toggle.btn-navbar.btn-success{"data-toggle" => "dropdown", :href => "#"}
              =image_tag('/assets/home_settings_icon.png')
            %ul.dropdown-menu.menu
              %li
                -#= link_to 'HOME', "#first-page", :class => 'navigation'
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#first-page": root_path}"} HOME


              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#gray-page": root_path + "#about"}"} ABOUT
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#yellow-page": root_path + "#how_to_play"}"} HOW TO PLAY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#what-page": root_path + "#gallery"}"} PHOTO GALLERY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#business-page": root_path + '#business'}"} BUSINESSES
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#events-page": root_path + '#trade_event'}"} SHOWS & EVENTS
              %li
                %a.navigation{:href=> pages_faq_path } FAQ
              -if current_user
                %li
                  = link_to 'My page', user_path(current_user.id), class: 'navigation'
                %li
                  = link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navigation'
              -else
                %li
                  = link_to 'Sign Up', new_user_registration_path, :class => 'navigation'
                %li
                  = link_to 'Sign In', new_user_session_path, :class => 'navigation'

        .header-right.span4{:style=> 'padding: 0; margin: 0'}
          .button-container.text-center
            .btn-group
              =button_to "DOWNLOAD THE APP", '#', :class =>"btn btn-warning", :style =>"data-toggle: dropdown", :id=> 'download-button'

              -#%a.dropdown-toggle{"data-toggle" => "dropdown" }
              -#  =image_tag('/assets/button-download.jpg')
              %ul.dropdown-menu.button#dropdown
                %li
                  %a.navigation{:href=>"http://www.apple.com/itunes/?cid=OAS-US-DOMAINS-itunes.com", :target => '_blank'}
                    =image_tag('/assets/button-app-store.png')
                %li
                  %a.navigation{:href=>"https://play.google.com/store", :target => '_blank'}
                    =image_tag('/assets/button-google-play.png')

        .span2.sign-menu.header-left.text-right
          - if current_user
            %ul
              %li
                = link_to 'my page', user_path(current_user.id), class: ' btn-link navigation '
              %li{:style=> 'border: 0px;'}
                = link_to 'sign out', destroy_user_session_path, method: :delete, class: ' btn-link navigation'
          - else
            %ul
              %li
                = link_to 'sign up', new_user_registration_path, class: ' btn-link navigation'
              %li{:style=> 'border: 0px;'}
                = link_to 'sign in', new_user_session_path, class: ' btn-link navigation'