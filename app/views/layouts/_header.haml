.header
  .row-fluid
    .header-content
      .span12.controls-row
        .header-left.span6
          .menu-full-screen
            %ul
              %li
                -#= link_to 'HOME', root_path, :class => 'navigation'
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#first-page": root_path}"} HOME

              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#gray-page": root_path}"} ABOUT
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#yellow-page": root_path}"} HOW TO PLAY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#what-page": root_path}"}  PHOTO GALLERY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#business-page": root_path}"} BUSINESSES
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#events-page": root_path}"} SHOWS & EVENTS
              %li
                %a.navigation{:href=> pages_faq_path } FAQ

              - if current_user
                = link_to 'My page', user_path(current_user.id), class: 'btn btn-link'
                = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-link'
                %br
              - else
                = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-link'
                = link_to 'Sigh In', new_user_session_path, class: 'btn btn-link'

          .btn-group.link
            -#button.btn.btn-navbar#my-btn{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %button.btn.dropdown-toggle.btn-navbar.btn-success{"data-toggle" => "dropdown", :href => "#"}
              %span.icon-bar{:style => 'color: black'}menu
              %span.icon-bar
              %span.icon-bar
            %ul.dropdown-menu.menu
              %li
                = link_to 'HOME', root_path, :class => 'navigation'

              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#gray-page": root_path}"} ABOUT
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#yellow-page": root_path}"} HOW TO PLAY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#what-page": root_path}"} PHOTO GALLERY
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#business-page": root_path}"} BUSINESSES
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#events-page": root_path}"} SHOWS & EVENTS
              %li
                %a.navigation{:href=>"#{(controller_path == "pages" && params[:action] == "home")?"#last-page": root_path}"} CONTACT US
              %li
                %a.navigation{:href=> pages_faq_path } FAQ
              -if current_user
                %li
                  = link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navigation'
              -else
                %li
                  = link_to 'Sign Up', new_user_registration_path, :class => 'navigation'
                %li
                  = link_to 'Sign In', new_user_session_path, :class => 'navigation'

        .header-right.span6
          .button-container.text-right
            .btn-group
              %a.dropdown-toggle{"data-toggle" => "dropdown" }
                =image_tag('/assets/button-download.jpg')
              %ul.dropdown-menu.button#dropdown
                %li
                  %a.navigation{:href=>"http://www.apple.com/itunes/?cid=OAS-US-DOMAINS-itunes.com", :target => '_blank'}
                    =image_tag('/assets/button-app-store.png')
                %li
                  %a.navigation{:href=>"https://play.google.com/store", :target => '_blank'}
                    =image_tag('/assets/button-google-play.jpg')

