:css
  body{
    padding: 0%;
    /*display: none;*/
  }



#sign-up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %br
    .row-fluid.sign-up-frame
      .insert{style: 'border: 1px solid green; max-width: 725px'}
        .row-fluid
          .span12
            %h2
              Sign Up
        .row-fluid
          .span6
            = f.label :email, :class=> 'email'
            = f.email_field :email, :autofocus => true
          .span6
        .row-fluid
          .span6
            = f.label :first_name
            = f.text_field :first_name, class: 'col-input'
          .span6
            = f.label :last_name
            = f.text_field :last_name, class: 'col-input'
        .row-fluid
          .span6
            = f.label :user_name
            = f.text_field :user_name, class: 'col-input'
          .span6
            = f.label :zip
            = f.text_field :zip, class: 'col-input'
        .row-fluid
          .span6
            = f.label :password
            = f.password_field :password, class: 'col-input'
          .span6
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: 'col-input'
        .row-fluid
          = f.label :avatar, :id=>'avatar-label'

          .fileupload.fileupload-new.span12.text-center{'data-provides' => 'fileupload'}
            %div.span6.input-container
              %input#lefile{:style => "display:none", :type => "file"}
                .input-append
                  %input#photoCover.input-large{:type => "text", :style => "margin: 0px;"}
                    %a.btn{:onclick => "$('input[id=lefile]').click();"}
                      Browse
                  .input-append{:style => "margin: 0px;"}
                    %a{href: "#", class: "btn fileupload-exists", 'data-dismiss' => 'fileupload', :onclick => "alert($('.fileupload-preview.fileupload-exists.thumbnail').css('min-width',$('.fileupload-preview.fileupload-exists.thumbnail').width());)"}
                      Remove
            .fileupload-preview.fileupload-exists.thumbnail.span6.text-center{}
              = image_tag resource.avatar.url, :id => 'img-upload'
            %br
            %br


        %br

        .row-fluid
          .span12.text-center
            = f.submit "Sign up", :class=> 'btn btn-success'
            %br
            = render "devise/shared/links"
