<style>
    body {
        padding: 0%;
        /*display: none;*/

    }
    .span12.text-center{
      margin: 0;
    }
    fieldset.btn{
    text-align: left;
    width: 50%;
    }
    .fname, .lname{
      display: inline;
    }
</style>
<div class = 'span12 text-center'>

  <fieldset   class = 'btn' id = 'sign-up'>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <br />
    <div><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %></div>
    <br />

     <div class ='row-fluid'>
       <div class = 'span6'>
           <div>
             <%= f.label :first_name %>
             <%= f.text_field :first_name %></div>
       </div>
       <div class = 'span6'>
         <div>
           <%= f.label :last_name %>
           <%= f.text_field :last_name %></div>
       </div>
     </div>

    <br />
    <div class ='row-fluid'>
      <div class = 'span6'>
         <div><%= f.label :user_name %>
          <%= f.text_field :user_name %></div>
        </div>
      <div class = 'span6'>
         <div><%= f.label :zip %>
            <%= f.text_field :zip %></div>
        </div>
    </div>
    <br />
    <div class ='row-fluid'>
      <div class = 'span6'>
          <div><%= f.label :password %>
            <%= f.password_field :password %></div>
          <br />
        </div>
      <div class = 'span6'>
          <div><%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %></div>
        </div>
    </div>

   <br />







  <div><%= f.label :avatar %>
  <%= f.file_field :avatar %></div>
    <br />
  <div><%= f.submit "Sign up", :class=> 'btn btn-success'%></div>
<% end %>

<%= render "devise/shared/links" %>
</fieldset>
</div>